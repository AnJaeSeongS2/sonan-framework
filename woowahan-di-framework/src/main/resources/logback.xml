<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<configuration>
	<property name="LOGS_PATH" value="./logs" />
	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{yyyyMMdd HH:mm:ss.SSS} [%-5level] [%thread] [%logger{36}] - %m%n</Pattern>
		</layout>
	</appender>
	<appender name="FILE_ROLLING" class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
		<fileNamePattern>${LOGS_PATH}/server_log.%d{yyyyMMdd}-%i.log</fileNamePattern>
		<maxHistory>30</maxHistory>
		<timeBasedFileNamingAndTriggeringPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">
			<maxFileSize>100MB</maxFileSize>
		</timeBasedFileNamingAndTriggeringPolicy>
		<layout class="ch.qos.logback.classic.PatternLayout">
			<Pattern>%d{yyyyMMdd HH:mm:ss.SSS} [%-5level] [%thread] [%logger{36}] - %m%n</Pattern>
		</layout>
	</appender>

<!--	<logger name="nextstep" level="DEBUG" />-->

<!--	<logger name="slipp" level="DEBUG" />-->

	<root level="INFO">
		<appender-ref ref="STDOUT" />
		<appender-ref ref="FILE_ROLLING" />
	</root>
</configuration>
